@{
    ViewBag.Title = "AddNewBid";
}
<br /><br />
<h2>Add New Bid</h2>
<br />
<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="well bs-component">
            <form class="form-horizontal" name="NewBid" action="@Url.Action("AddBid", "Bid")" method="POST" enctype="multipart/form-data">
                <fieldset>
                    <legend>Upload your Bid</legend>

                    <div class="form-group">
                        <label for="TenderId" class="col-lg-2 control-label">Tender ID</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" name="noticeid" value="@ViewData["noticeId"]" readonly="readonly">
                        </div>
                    </div>

                    <label for="PDF" class="col-lg-2 control-label">Bid (PDF)</label>
                    <div class="col-lg-10">
                        <input id="pdfInput" type="file" accept=".pdf" name="PDF"><br />
                    </div>                 

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>


                </fieldset>
            </form>
        </div>
    </div>
</div>
